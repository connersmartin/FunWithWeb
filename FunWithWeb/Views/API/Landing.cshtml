
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>You're signed in to spotify and can search now!</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4><span class="artistSearch">Tempo </span>Search</h4>
        <hr/>
        <div class="form-group">
            <div class="col-md-10">
                @Html.Editor("id") <span></span><input type="checkbox" id="tempoSearch" />Tempo search?
            </div>
            <br>
            <div class="col-md-10 artistSearch">
                @Html.Editor("artist") <span>Artist search</span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Search" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script type="text/javascript">
        $(".artistSearch").hide();
        $("#tempoSearch").click(function () {
            if ($(this).is(":checked")) {
                $(".artistSearch").show();
            }
            else {
                $(".artistSearch").hide();
            }
        });

    </script>
    }
