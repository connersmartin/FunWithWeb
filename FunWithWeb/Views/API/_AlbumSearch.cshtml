@model IEnumerable<SpotifyAPI.Web.Models.FullAlbum>

    <div class="col-xs-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Album Results</th>
                    <th>Artists</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @foreach (var artist in item.Artists)
                            {
                                @Html.ActionLink(artist.Name, "Detail", new { id = artist.Id })
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

