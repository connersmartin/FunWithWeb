@{
    HttpCookie myCookie = new HttpCookie("authed");
    myCookie = Request.Cookies["authed"];
    bool authed = false;

    // Read the cookie information and display it.
    if (myCookie != null)
        { authed = true; }

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>API</h2>
<h3>Maybe... we'll see</h3>

@if (!authed | authed)
{<a href="@Url.Action("Auth", "API")" class="btn btn-default" >Auth spotify</a>}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Search</h4>
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                @Html.Editor("id")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}


