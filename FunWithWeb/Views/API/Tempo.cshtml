@model IEnumerable<SpotifyAPI.Web.Models.SimpleTrack>

<h2>Tempo</h2>

<div class="col-xs-4">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Track Results</th>
                <th>Artist</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @foreach (var artist in item.Artists)
                        {
                            @Html.ActionLink(artist.Name, "Detail", new { id = artist.Id })<span> </span>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>